@inherits LayoutComponentBase

<!-- Parent Dashboard Navbar -->
<div class="top-navbar">
    <div class="container">
        <a class="navbar-brand" href="/parentHome">
            <img src="images/companyicon.png" alt="Callejo Inc." class="nav-logo" /> <!-- Same logo and design as main layout -->
            <span class="brand-name">Callejo Inc.</span> <!-- Added span for consistent branding -->
        </a>

        <!-- Navigation Links for Parent Dashboard -->
        <nav class="nav-menu">
            <a class="nav-item-link" href="/parentHome">
                <img src="images/home.png" alt="Home Icon" class="nav-icon" /> HOME
            </a>
            <a class="nav-item-link" href="/services">
                <img src="images/services.png" alt="Services Icon" class="nav-icon" /> SERVICES
            </a>
            <a class="nav-item-link" href="/about">
                <img src="images/about.png" alt="About Us Icon" class="nav-icon" /> ABOUT US
            </a>
            <a class="nav-item-link" href="/schedule">
                <img src="images/schedule.png" alt="Child's Schedule Icon" class="nav-icon" /> Child's Schedule
            </a>
            <a class="nav-item-link" href="/notifications">
                <img src="images/Notifications.png" alt="Notifications Icon" class="nav-icon" /> Notifications
            </a>
            <div class="nav-right">
                <a class="nav-item-link" href="/profile">
                    <img src="images/myprofile.png" alt="My Profile Icon" class="nav-icon" /> Profile
                </a>
                <a class="nav-item-link" href="/settings">
                    <img src="images/settings.png" alt="Settings Icon" class="nav-icon" /> Settings
                </a>
                <a class="nav-item-link" href="/">
                    <img src="images/logout.png" alt="Logout Icon" class="nav-icon" /> Logout
                </a>
            </div>
        </nav>
    </div>
</div>

<!-- Main Content -->
<main class="full-width-container">
    @Body
</main>

<footer class="footer full-width-container">
    <div class="footer-container">

        <!-- Contact Information -->
        <div class="footer-info">
            <div>
                <img src="images/location.png" alt="Location Icon" class="footer-icon" /> Location
            </div>
            <div>
                <img src="images/phone.png" alt="Phone Icon" class="footer-icon" /> Phone Number
            </div>
            <div>
                <img src="images/email.png" alt="Email Icon" class="footer-icon" /> Email
            </div>
        </div>

        <!-- Horizontal Line -->
        <hr class="footer-divider" />

        <!-- Social Media Links -->
        <div class="footer-social">
            <a href="#"><img src="images/facebook.png" alt="Facebook" class="social-icon" /></a>
            <a href="#"><img src="images/twitter.png" alt="Twitter" class="social-icon" /></a>
            <a href="#"><img src="images/in.png" alt="LinkedIn" class="social-icon" /></a>
            <a href="#"><img src="images/insta.png" alt="Instagram" class="social-icon" /></a>
        </div>

        <!-- Copyright Information -->
        <p>&copy; 2024 Callejo Inc. All rights reserved.</p>
    </div>
</footer>
