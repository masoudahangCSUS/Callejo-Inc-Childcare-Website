@page "/testimonials"
@inherits BlazorApp.Pages.Testimonials


<div class="full-width-container testimonials-section" style="padding: 100px 0;">
    <h2 class="section-title" style="color: #00B7D7; text-align: center; font-size: 4rem;">Testimonials</h2>
    <p style="text-align: center; max-width: 1200px; margin: auto; font-size: 1.8rem;">
        Activities are developmentally appropriate and will enhance your child’s growth and abilities.
        Activities include outside play, arts and crafts, circle time story time, reading books, singing, music, and movement, and educational learning such as letters, letter sounds, numbers, colors, and shapes. A wide variety of toys are also offered for playtime.
    </p>

    <div class="testimonials-images-container" style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 100px; max-width: 1100px; margin: 60px auto;">
        <img src="images/testimonial1.png" alt="Testimonial 1" class="testimonial-img" style="width: 100%; height: 250px; border-radius: 15px; object-fit: cover;" />
        <img src="images/testimonial2.png" alt="Testimonial 2" class="testimonial-img" style="width: 100%; height: 250px; border-radius: 15px; object-fit: cover;" />
        <img src="images/testimonial3.png" alt="Testimonial 3" class="testimonial-img" style="width: 100%; height: 250px; border-radius: 15px; object-fit: cover;" />
        <img src="images/testimonial4.png" alt="Testimonial 4" class="testimonial-img" style="width: 100%; height: 250px; border-radius: 15px; object-fit: cover;" />
        <img src="images/testimonial5.png" alt="Testimonial 5" class="testimonial-img" style="width: 100%; height: 250px; border-radius: 15px; object-fit: cover;" />
        <img src="images/testimonial6.png" alt="Testimonial 6" class="testimonial-img" style="width: 100%; height: 250px; border-radius: 15px; object-fit: cover;" />
    </div>
</div>

<div class="full-width-container faq-section" style="background-color: #F9F9F9; padding: 80px 0;">
    <h2 style="text-align: center; font-size: 2.5rem; color: #333;">Common Questions About ABA Therapy</h2>
    <div class="faq-container" style="max-width: 1200px; margin: 50px auto;">
        @foreach (var faq in FaqItems)
        {
            <div class="faq-item" style="margin-bottom: 20px; border: 2px solid #7031E3; border-radius: 15px; overflow: hidden;">
                <button class="faq-button" @onclick="() => ToggleFAQ(faq.Id)"
                        style="width: 100%; padding: 15px; border: none; font-size: 1.5rem; text-align: left; background-color: white; color: #7031E3; cursor: pointer; display: flex; justify-content: space-between; align-items: center;">
                    @faq.Question
                    <span style="font-weight: bold;">@((faq.IsExpanded ? "▲" : "▼"))</span>
                </button>
                @if (faq.IsExpanded)
                {
                    <div class="faq-content" style="padding: 20px; font-size: 1.2rem; background-color: white;">
                        <p>@faq.Answer</p>
                    </div>
                }
            </div>
        }
    </div>
</div>