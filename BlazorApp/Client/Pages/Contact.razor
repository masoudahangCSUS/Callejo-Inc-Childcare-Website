@page "/contact"

<PageTitle>About</PageTitle>
<!--Move all styles attributes into separate css file later...-->
<!--Inital Contact Us message-->
<div style="background-color: #00B7D7; padding: 120px 0; text-align:center">
    <div style="max-width: 900px; margin: auto; display: flex; align-items: center; gap: 20px;">
        <div style="flex: 2; text-align:center;">
            <h1 style="color: white; font-family: 'Roboto', sans-serif; text-align:center;font-weight:bold">Get in Touch with Us Today!</h1><br />
            <p style="color: white; font-family: 'Roboto', sans-serif; text-align:center; font-size:25px">We're here to answer any questions you have about our childcare <br />services. Whether you're interested in enrolling your child or have specific<br /> inquiries, we'd love to hear from you. Fill out the form below and one of our staff members will get back to you shortly!</p>

        </div>

    </div>
</div>
<!--All forms and labels for contact-->
<div class="contact-page">
    <h2>Get Started today!</h2>
    <div class="contact-form-container">
        <form>
            <div class="form-group">
                <label for="fname">Name:</label>
                <input type="text" id="fname" name="fname">
            </div>

            <div class="form-group">
                <label for="phone">Phone Number:</label>
                <input type="text" id="phone" name="phone">
            </div>

            <div class="form-group">
                <label for="email">Email:</label>
                <input type="text" id="email" name="email">
            </div>

            <div class="form-group">
                <label for="reason">Reason for Inquiry:</label>
                <textarea name="reason" id="reason" rows="10"></textarea>
            </div>
        </form>

        <div class="info-links">
            <a href="javascript:void(0);" class="info-link">Click here to read the Parent/Provider Contract.</a>
            <a href="javascript:void(0);" class="info-link">Click here to read the licensing agreement.</a>
        </div>

        <div class="button-group">
            <input type="submit" class="submit-button" value="Submit">
        </div>
    </div>
</div>