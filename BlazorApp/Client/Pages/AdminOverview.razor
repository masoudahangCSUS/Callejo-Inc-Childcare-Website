@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]

<div class="admin-overview">
    <!-- Page Title -->
    <div class="overview-header">
        <h2>Overview</h2>
        <p>Welcome back, Admin! Here's a summary of your childcare center's performance.</p>
    </div>

    <div class="grid">
        <!-- Company Facts -->
        <div class="card">
            <h5>Company Facts</h5>
            <p>Employees</p>
            <div>
                <!-- Placeholder for chart component -->
                <p>Employee List (2024)</p>
            </div>
        </div>

        <!-- Total Revenue -->
        <div class="card highlight-card">
            <h5>Total Revenue</h5>
            <p>$125,000</p>
            <p>Last Updated: March 18, 2025</p>
        </div>

        <!-- Total Active Children -->
        <div class="card highlight-card">
            <h5>Total Active Children</h5>
            <p>48</p>
            <p>Includes infants, toddlers, and preschoolers</p>
        </div>

        <!-- Statistics -->
        <div class="card">
            <h5>Statistics</h5>
            <p>Projects by Account</p>
            <ul>
                <li>No active projects at the moment.</li>
            </ul>
        </div>

        <!-- Assigned Risks -->
        <div class="card">
            <h5>Assigned Risks</h5>
            <p>No risks currently assigned.</p>
        </div>

        <!-- Assigned Action Items -->
        <div class="card">
            <h5>Assigned Action Items</h5>
            <p>No action items assigned.</p>
        </div>
    </div>
</div>
