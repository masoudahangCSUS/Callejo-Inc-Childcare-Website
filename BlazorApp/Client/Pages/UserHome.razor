﻿
@page "/user/home"

<div class="three-column-layout">
    <!-- Left Column: "Welcome back, Jane" -->
    <div class="left-col">
        <p>We’re so glad to have you here. Explore the latest updates below.</p>
        <button class="action-btn">Go to Dashboard</button>
    </div>

    <!-- Middle Column: 2×2 Box Grid -->
    <div class="middle-col">
        <div class="box-grid">
            <div class="card">
                <h3>Pictures from Admin</h3>
                <p>Stay up to date on the latest events and memories!</p>
            </div>
            <div class="card">
                <h3>Activities</h3>
                <p>Check out upcoming activities and events posted by admin!</p>
            </div>
            <div class="card">
                <h3>Account Costs</h3>
                <p>Review your current plan, billing details, and any fees.</p>
            </div>
            <div class="card">
                <h3>Contact Info</h3>
                <p>Update address, phone number, or email in one easy spot.</p>
            </div>
        </div>
    </div>

    <!-- Right Column: Photo -->
    <div class="right-col">
        <img src="images/childcare.jpg" alt="Placeholder image" />
    </div>
</div>