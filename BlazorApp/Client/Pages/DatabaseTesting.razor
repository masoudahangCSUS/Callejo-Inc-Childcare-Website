@page "/database-test"
@using Common.View
@inject CustomerInfoService CustomerInfoService

<h3>Children and Guardians</h3>

@if (childrenGuardians == null)
{
    <p>Loading data...</p>
}
else if (childrenGuardians.Count == 0)
{
    <p>No children and guardians found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Child First Name</th>
                <th>Child Last Name</th>
                <th>Guardian First Name</th>
                <th>Guardian Last Name</th>
                <th>Address</th>
                <th>City</th>
                <th>ZIP</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in childrenGuardians)
            {
                <tr>
                    <td>@item.childFirstName</td>
                    <td>@item.childLastName</td>
                    <td>@item.guadianFirstName</td>
                    <td>@item.guardianLastName</td>
                    <td>@item.address</td>
                    <td>@item.city</td>
                    <td>@item.zip_code</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<ChildrenGuardianView> childrenGuardians;

    protected override async Task OnInitializedAsync()
    {
        childrenGuardians = await CustomerInfoService.GetChildrenGuardiansAsync();
    }
}
