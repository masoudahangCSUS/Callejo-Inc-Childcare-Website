@page "/admin"
@using Common.View
@inject CustomerInfoService CustomerInfoService
@rendermode InteractiveServer

<div>
    <h3>Users</h3>
    <button @onclick = "() => ShowCreateProfileModal()">ADD</button>
</div>

@if (users == null)
{
    <p>Loading data...</p>
}
else if (users.Count == 0)
{
    <p>No users found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Address</th>
                <th>City</th>
                <th>ZIP</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in users)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Address</td>
                    <td>@user.City</td>
                    <td>@user.ZipCode</td>
                    <td>
                        <button @onclick = "() => EditUser(user)">Edit</button> 
                        <button @onclick = "() => DeleteUser(user)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<Modal Title="Create Profile" IsVisible="@isCreateProfileModalVisible" OnClose="CloseCreateProfileModal">
    <CreateProfileForm OnUserCreated="LoadUsers" />
</Modal>

@code {
    private List<UserView> users;
    private bool isCreateProfileModalVisible = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadUsers();
    }

    private async Task LoadUsers()
    {
        users = await CustomerInfoService.GetAllUsersAsync();
    }

    private void ShowCreateProfileModal()
    {
        Console.WriteLine("making modal visible");
        isCreateProfileModalVisible = true;
    }

    private void CloseCreateProfileModal()
    {
        isCreateProfileModalVisible = false;
    }

    public void EditUser(UserView user)
    {
        Console.WriteLine($"Clicked to edit user: {user.FirstName}");
    }

    public void DeleteUser(UserView user)
    {
        Console.WriteLine($"Clicked to delete user: {user.FirstName}");
    }
}
