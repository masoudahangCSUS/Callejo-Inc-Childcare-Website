<div class="admin-dashboard">
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="profile">
            <img src="user-profile.jpg" alt="Welcome, Jane" class="profile-img" />
            <h4>Jane C.</h4>
        </div>
        <nav>
            <ul>
                <li><a href="/admin-home" class="active">Dashboard</a></li>
                <li><a href="/UserManagement">Accounts</a></li>
